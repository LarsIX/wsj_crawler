import sqlite3

DB_PATH = r"C:\Users\PC\Desktop\Masterarbeit\Code\LATimes\articlesLAT.db"

def clear_article_table():
    conn = sqlite3.connect(DB_PATH)
    c = conn.cursor()

    # LÃ¶scht alle EintrÃ¤ge aus der Tabelle "article"
    c.execute("DELETE FROM article")
    conn.commit()

    print("ðŸ§¹ Cleared table 'article' successfully.")

    conn.close()

if __name__ == "__main__":
    clear_article_table()
